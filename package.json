{
  "name": "Reusable Node JS",
  "version": "1.0.0",
  "description": "A login system made from scratch using best practices, including SOLID principles and Domain-Driven Design and Test Driven Development ",
  "main": "index.js",
  "bin": {
    "kl-cli": "node ./bin/copy.js"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup src --outdir build",
    "start": "node build/server.js",
    "lint": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run -c ./vitest-e2e.config.ts",
    "test:e2e:watch": "vitest -c ./vitest-e2e.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^20.4.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.11",
    "@types/shelljs": "^0.8.14",
    "@types/supertest": "^2.0.12",
    "@vitest/coverage-v8": "^0.33.0",
    "@vitest/ui": "^0.33.0",
    "eslint": "^8.46.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.33.0"
  },
  "dependencies": {
    "@fastify/cookie": "^9.0.4",
    "@fastify/cors": "^8.4.1",
    "@fastify/jwt": "^7.2.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.10.1",
    "@prisma/client": "^5.2.0",
    "@swc/core": "^1.3.95",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.3.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "fastify": "^4.21.0",
    "handlebars": "^4.7.8",
    "inquirer": "^9.2.11",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.5",
    "supertest": "^6.3.3",
    "unplugin-swc": "^1.4.3",
    "zod": "^3.21.4",
    "zod-validation-error": "^2.0.0"
  }
}
